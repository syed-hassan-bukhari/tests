question 9
def second_largest(numbers):
    first = 0
    second = 0
    for n in numbers:
        if n > first:
            first, second = n, first
        elif first > n > second:
            second = n
    return second or None
print(second_largest([1,8, 3, 4, 5])

question 10
def unique_in_order(iterable):
    res =[]
    previous =''
    for y in iterable:
        if y != previous:
            res.append(y)
            previous=y
    return res
print(unique_in_order('AAAABBBCCDAABBB'))
print(unique_in_order('ABBCcAD'))
print(unique_in_order('11324278233')

question 11
n=int(input("Enter a number"))
def factoorial(n):
        if (n==1 or n==0):
            return 1
        else:
            return n*factoorial(n-1)
print(f"The Factorial of {n} is : {factoorial(n)}")

question 12
def greet (fx):
    def mfx():
        print('i am a programmer')
        fx()
        print('i am a python programmer')
    return(mfx)
@greet
def hello():
    print('Hello World')
hello()

